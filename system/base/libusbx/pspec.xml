<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>libusbx</Name>
        <Homepage>http://libusbx.org//</Homepage>
        <Packager>
            <Name>Erdem Artan</Name>
            <Email>erdem@pardus-linux.org</Email>
        </Packager>
        <License>LGPLv2.1</License>
        <IsA>library</IsA>
        <Summary>Userspace access to USB devices</Summary>
        <Description>Project's main aim is to create a library for use by user level applications to access USB devices regardless of OS.</Description>
        <Archive sha1sum="53621af3f667844207de862fcc39f9b5a4e99c42" type="tarbz2">http://sourceforge.net/projects/libusbx/files/releases/1.0.12/source/libusbx-1.0.12.tar.bz2</Archive>
    </Source>

    <Package>
        <Name>libusbx</Name>
        <Replaces>
            <Package>libusb1</Package>
        </Replaces>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

    <Package>
        <Name>libusbx-devel</Name>
        <Replaces>
            <Package>libusb1-devel</Package>
        </Replaces>
        <PartOf>system.devel</PartOf>
        <Summary>Development files for libusbx</Summary>
        <RuntimeDependencies>
            <Dependency release="current">libusbx</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
        </Files>
    </Package>

    <Package>
        <Name>libusbx-32bit</Name>
        <PartOf>emul32</PartOf>
        <Summary>32-bit shared libraries for libusbx</Summary>
        <BuildType>emul32</BuildType>
        <RuntimeDependencies>
            <Dependency release="current">libusbx</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib32</Path>
        </Files>
    </Package>

    <History>
        <Update release="1">
            <Date>2012-07-11</Date>
            <Version>1.0.12</Version>
            <Comment>First Release</Comment>
            <Name>Erdem Artan</Name>
            <Email>erdem@pardus-linux.org</Email>
        </Update>
    </History>
</PISI>
