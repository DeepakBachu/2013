+    if (lang.isEmpty()) {
+        lang = QString(getenv("LANG"));
+    }
+    if (lang.contains('_')) {
+        lang = lang.section('_', 1);
+    }
+    if (lang.contains('.')) {
+        lang = lang.section('.', 0, 0);
+    }
+    return lang.toUpper();
