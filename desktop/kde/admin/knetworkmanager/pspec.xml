    <Package>
        <Name>knetworkmanager-common</Name>
        <Summary>Common files used by knetworkmanager and plasma-applet-networkmanagement.</Summary>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.0_beta2">qt</Dependency>
            <Dependency versionFrom="4.5.0">kdelibs</Dependency>
            <Dependency versionFrom="4.5.0">kdebase-workspace</Dependency>
            <Dependency>NetworkManager</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc/dbus-1</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="data">/usr/share</Path>
            <Path fileType="data">/usr/share/icons</Path>
        </Files>
    </Package>

    <Package>
        <Name>knetworkmanager</Name>
        <RuntimeDependencies>
            <Dependency release="3">knetworkmanager-common</Dependency>
            <Dependency>kdebase-workspace</Dependency>
            <Dependency>kdelibs</Dependency>
            <Dependency>qt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/knetworkmanager</Path>
            <Path fileType="data">/usr/share/applications/kde4/knetworkmanager.desktop</Path>
        </Files>
    </Package>

    <Package>
        <Name>plasma-applet-networkmanagement</Name>
        <Summary>plasma-applet-networkmanagement is a Plasma applet for controlling network connections on systems that use the NetworkManager daemon</Summary>
        <RuntimeDependencies>
            <Dependency release="3">knetworkmanager-common</Dependency>
            <Dependency>kdebase-workspace</Dependency>
            <Dependency>kdelibs</Dependency>
            <Dependency>qt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/share/kde4/services/plasma-applet-networkmanagement.desktop</Path>
            <Path fileType="data">/usr/share/kde4/services/kcm_networkmanagement_tray.desktop</Path>
            <Path fileType="data">/usr/share/kde4/services/kded/networkmanagement.desktop</Path>
            <Path fileType="library">/usr/lib/kde4/plasma_applet_networkmanagement.so</Path>
            <Path fileType="library">/usr/lib/kde4/kded_networkmanagement.so</Path>
            <Path fileType="library">/usr/lib/kde4/kcm_networkmanagement_tray.so</Path>
        </Files>
    </Package>

